{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": ["ES2022"],
        "moduleResolution": "node",
        "strict": true,
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "typeRoots": ["node_modules/@types", "src/typings"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}
