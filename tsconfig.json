{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"typeRoots": [
			"node_modules/@types",
			"src/types"
		]
	},
	"exclude": ["node_modules"],
	"include": ["src"]
}